<UserControl x:Class="Patient_Information_System_CS.Views.Patient.PatientDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Notification Bar -->
        <Border Grid.Row="0" 
                Background="LightBlue" 
                Padding="15,10"
                Margin="10,10,10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Your appointment request is currently under review." 
                           VerticalAlignment="Center"
                           FontSize="14"/>
                
                <Button Grid.Column="1" 
                        Content="?" 
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Padding="10,0"/>
            </Grid>
        </Border>

        <!-- Summary Cards Grid -->
        <UniformGrid Grid.Row="1" 
                     Rows="2" 
                     Columns="3" 
                     Margin="10">
            
            <!-- Card 1: Doctor Name -->
            <Border Background="#DC3545" 
                    Margin="5"
                    Padding="20"
                    CornerRadius="5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Neuvillette Dragon" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="White"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="Doctor Name" 
                               FontSize="14"
                               Foreground="White"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 2: Symptoms -->
            <Border Background="#6C5B28" 
                    Margin="5"
                    Padding="20"
                    CornerRadius="5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Heart Palpation" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="White"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="Symptoms" 
                               FontSize="14"
                               Foreground="White"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 3: Admit Date -->
            <Border Background="#0D6EFD" 
                    Margin="5"
                    Padding="20"
                    CornerRadius="5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Feb. 10, 2024" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="White"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="Admit Date" 
                               FontSize="14"
                               Foreground="White"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 4: Doctor Status -->
            <Border Background="#DC3545" 
                    Margin="5"
                    Padding="20"
                    CornerRadius="5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Currently Available" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="White"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="Doctor Status" 
                               FontSize="14"
                               Foreground="White"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 5: Doctor Department -->
            <Border Background="#6C5B28" 
                    Margin="5"
                    Padding="20"
                    CornerRadius="5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Cardiologist" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="White"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="Doctor Department" 
                               FontSize="14"
                               Foreground="White"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 6: Appointment Status -->
            <Border Background="#0D6EFD" 
                    Margin="5"
                    Padding="20"
                    CornerRadius="5">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Currently Pending" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="White"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="Appointment Status" 
                               FontSize="14"
                               Foreground="White"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
        </UniformGrid>
    </Grid>
</UserControl>
