<UserControl x:Class="Patient_Information_System_CS.Views.Patient.PatientDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="NotificationBorder"
                Grid.Row="0"
                Background="#DBEAFE"
                Padding="16"
                Margin="10,10,10,5"
                CornerRadius="6"
                Visibility="Collapsed">
            <TextBlock x:Name="NotificationTextBlock"
                       FontSize="14"
                       Foreground="#1F2937"
                       TextWrapping="Wrap"
                       Text="Welcome to your patient dashboard."/>
        </Border>

        <UniformGrid Grid.Row="1"
                     Rows="2"
                     Columns="3"
                     Margin="10">
            <Border Background="#1E3A8A"
                    Margin="5"
                    Padding="20"
                    CornerRadius="6">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="DoctorNameTextBlock"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="Unassigned"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="Primary doctor"
                               FontSize="13"
                               Foreground="White"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="#6C5B28"
                    Margin="5"
                    Padding="20"
                    CornerRadius="6">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="DoctorDepartmentTextBlock"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="Not specified"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="Department"
                               FontSize="13"
                               Foreground="White"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="#047857"
                    Margin="5"
                    Padding="20"
                    CornerRadius="6">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="DoctorStatusTextBlock"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="Status pending"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="Doctor status"
                               FontSize="13"
                               Foreground="White"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="#7C3AED"
                    Margin="5"
                    Padding="20"
                    CornerRadius="6">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="NextAppointmentValueTextBlock"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="No upcoming visits"
                               TextWrapping="Wrap"/>
                    <TextBlock x:Name="NextAppointmentStatusTextBlock"
                               FontSize="13"
                               Foreground="White"
                               Margin="0,10,0,0"
                               Text="Status: Pending"/>
                </StackPanel>
            </Border>

            <Border Background="#0D6EFD"
                    Margin="5"
                    Padding="20"
                    CornerRadius="6">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="AdmissionStatusTextBlock"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="Admitted"
                               TextWrapping="Wrap"/>
                    <TextBlock x:Name="AdmissionRoomTextBlock"
                               FontSize="13"
                               Foreground="White"
                               Margin="0,10,0,0"
                               Text="Room assignment pending"/>
                </StackPanel>
            </Border>

            <Border Background="#DC2626"
                    Margin="5"
                    Padding="20"
                    CornerRadius="6">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="PendingBillAmountTextBlock"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="$0.00"
                               TextWrapping="Wrap"/>
                    <TextBlock x:Name="PendingBillStatusTextBlock"
                               FontSize="13"
                               Foreground="White"
                               Margin="0,10,0,0"
                               Text="Outstanding balance"/>
                </StackPanel>
            </Border>
        </UniformGrid>
    </Grid>
</UserControl>
