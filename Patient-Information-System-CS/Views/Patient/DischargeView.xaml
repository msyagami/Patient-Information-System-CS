<UserControl x:Class="Patient_Information_System_CS.Views.Patient.DischargeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- Invoice 1 -->
            <TextBlock Text="Invoice Date: March 14, 2024" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Margin="0,10,0,10"
                       Foreground="#2C3E50"/>
            
            <Border BorderBrush="#DEE2E6" 
                    BorderThickness="1" 
                    Padding="20"
                    Margin="0,0,0,30">
                <StackPanel>
                    <!-- Hospital Header -->
                    <TextBlock Text="Hospital Management" 
                               FontSize="28" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Patient and Admission Info Grid -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Patient Name: Mike Jordan Candido" Margin="0,3"/>
                            <TextBlock Text="Patient Contact: 09462566352" Margin="0,3"/>
                            <TextBlock Text="Patient Address: 8246 Philippines Streets" Margin="0,3"/>
                        </StackPanel>

                        <!-- Right Column -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Admit Date: March 13, 2024" Margin="0,3"/>
                            <TextBlock Text="Release Date: March 14, 2024" Margin="0,3"/>
                            <TextBlock Text="Days Spent At the Hospital: 0" Margin="0,3"/>
                            <TextBlock Text="Doctor Name: Kujo Sara" Margin="0,3"/>
                        </StackPanel>
                    </Grid>

                    <!-- Disease and Symptoms -->
                    <Border Background="#F8F9FA" Padding="10" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Disease and Symptoms" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Fever, Rash"/>
                        </StackPanel>
                    </Border>

                    <!-- Invoice Table -->
                    <Border BorderBrush="#DEE2E6" BorderThickness="1" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Header -->
                            <Border Grid.Row="0" Grid.Column="0" Background="#F8F9FA" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,1,1">
                                <TextBlock Text="Item" FontWeight="Bold"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="1" Background="#F8F9FA" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
                                <TextBlock Text="Price" FontWeight="Bold"/>
                            </Border>

                            <!-- Row 1 -->
                            <Border Grid.Row="1" Grid.Column="0" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,1,1">
                                <TextBlock Text="Room Charge of 0 Days"/>
                            </Border>
                            <Border Grid.Row="1" Grid.Column="1" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
                                <TextBlock Text="0"/>
                            </Border>

                            <!-- Row 2 -->
                            <Border Grid.Row="2" Grid.Column="0" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,1,1">
                                <TextBlock Text="Doctor Fee"/>
                            </Border>
                            <Border Grid.Row="2" Grid.Column="1" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
                                <TextBlock Text="500"/>
                            </Border>

                            <!-- Row 3 -->
                            <Border Grid.Row="3" Grid.Column="0" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,1,1">
                                <TextBlock Text="Medicine Cost"/>
                            </Border>
                            <Border Grid.Row="3" Grid.Column="1" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
                                <TextBlock Text="0"/>
                            </Border>

                            <!-- Row 4 -->
                            <Border Grid.Row="4" Grid.Column="0" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,1,0">
                                <TextBlock Text="Other Charge"/>
                            </Border>
                            <Border Grid.Row="4" Grid.Column="1" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,0,0">
                                <TextBlock Text="0"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Total -->
                    <TextBlock Text="Total: 500" 
                               FontWeight="Bold" 
                               FontSize="16"
                               HorizontalAlignment="Right"
                               Margin="0,10,0,15"/>

                    <!-- Download Button -->
                    <Button Content="Download" 
                            Background="#DC3545"
                            Foreground="White"
                            Padding="20,10"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- Invoice 2 -->
            <TextBlock Text="Invoice Date: March 15, 2024" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Margin="0,10,0,10"
                       Foreground="#2C3E50"/>
            
            <Border BorderBrush="#DEE2E6" 
                    BorderThickness="1" 
                    Padding="20"
                    Margin="0,0,0,30">
                <StackPanel>
                    <!-- Hospital Header -->
                    <TextBlock Text="Hospital Management" 
                               FontSize="28" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Patient and Admission Info Grid -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Patient Name: Mike Jordan Candido" Margin="0,3"/>
                            <TextBlock Text="Patient Contact: 09462566352" Margin="0,3"/>
                            <TextBlock Text="Patient Address: 8246 Philippines Streets" Margin="0,3"/>
                        </StackPanel>

                        <!-- Right Column -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Admit Date: March 14, 2024" Margin="0,3"/>
                            <TextBlock Text="Release Date: March 15, 2024" Margin="0,3"/>
                            <TextBlock Text="Days Spent At the Hospital: 1" Margin="0,3"/>
                            <TextBlock Text="Doctor Name: Neuvillette Dragon" Margin="0,3"/>
                        </StackPanel>
                    </Grid>

                    <!-- Disease and Symptoms -->
                    <Border Background="#F8F9FA" Padding="10" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Disease and Symptoms" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Heart Palpitation"/>
                        </StackPanel>
                    </Border>

                    <!-- Invoice Table -->
                    <Border BorderBrush="#DEE2E6" BorderThickness="1" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Header -->
                            <Border Grid.Row="0" Grid.Column="0" Background="#F8F9FA" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,1,1">
                                <TextBlock Text="Item" FontWeight="Bold"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="1" Background="#F8F9FA" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
                                <TextBlock Text="Price" FontWeight="Bold"/>
                            </Border>

                            <!-- Row 1 -->
                            <Border Grid.Row="1" Grid.Column="0" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,1,1">
                                <TextBlock Text="Room Charge of 1 Days"/>
                            </Border>
                            <Border Grid.Row="1" Grid.Column="1" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
                                <TextBlock Text="1500"/>
                            </Border>

                            <!-- Row 2 -->
                            <Border Grid.Row="2" Grid.Column="0" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,1,1">
                                <TextBlock Text="Doctor Fee"/>
                            </Border>
                            <Border Grid.Row="2" Grid.Column="1" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
                                <TextBlock Text="800"/>
                            </Border>

                            <!-- Row 3 -->
                            <Border Grid.Row="3" Grid.Column="0" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,1,1">
                                <TextBlock Text="Medicine Cost"/>
                            </Border>
                            <Border Grid.Row="3" Grid.Column="1" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
                                <TextBlock Text="350"/>
                            </Border>

                            <!-- Row 4 -->
                            <Border Grid.Row="4" Grid.Column="0" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,1,0">
                                <TextBlock Text="Other Charge"/>
                            </Border>
                            <Border Grid.Row="4" Grid.Column="1" Padding="10" BorderBrush="#DEE2E6" BorderThickness="0,0,0,0">
                                <TextBlock Text="150"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Total -->
                    <TextBlock Text="Total: 2800" 
                               FontWeight="Bold" 
                               FontSize="16"
                               HorizontalAlignment="Right"
                               Margin="0,10,0,15"/>

                    <!-- Download Button -->
                    <Button Content="Download" 
                            Background="#DC3545"
                            Foreground="White"
                            Padding="20,10"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="14"/>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
