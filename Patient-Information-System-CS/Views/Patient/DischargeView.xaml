<UserControl x:Class="Patient_Information_System_CS.Views.Patient.DischargeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:Patient_Information_System_CS.Models"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <TextBlock Text="Discharge &amp; Billing Summary"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,8"/>
            <TextBlock x:Name="PatientSummaryTextBlock"
                       Text="Review your recent hospital stays and invoices"
                       Foreground="#607D8B"
                       Margin="0,0,0,24"/>

            <Border x:Name="EmptyStateBorder"
                    Background="#F8F9FA"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Padding="24"
                    CornerRadius="6"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="No discharge invoices yet"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="You'll see your hospital release summaries here once an invoice is generated."
                               Foreground="#607D8B"/>
                </StackPanel>
            </Border>

            <ItemsControl x:Name="InvoicesItemsControl"
                          Margin="0,0,0,16">
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Margin" Value="0,0,0,26"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:BillingRecord}">
                        <StackPanel>
                            <TextBlock Text="{Binding ReleaseDate, StringFormat=Invoice Date: {0:MMMM dd, yyyy}}"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,12"/>

                            <Border BorderBrush="#DEE2E6"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="22">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,0,0,18"
                                                HorizontalAlignment="Stretch">
                                        <TextBlock Text="Hospital Management"
                                                   FontSize="26"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Left"/>
                                        <Border Background="#E7F5FF"
                                                BorderBrush="#91D5FF"
                                                BorderThickness="1"
                                                CornerRadius="12"
                                                Padding="12,4"
                                                Margin="18,0,0,0">
                                            <TextBlock Text="{Binding StatusDisplay, StringFormat=Status: {0}}"
                                                       Foreground="#0C4A6E"
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>

                                    <Grid Margin="0,0,0,18">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding PatientName, StringFormat=Patient Name: {0}}" Margin="0,2"/>
                                            <TextBlock Text="{Binding ContactNumber, StringFormat=Patient Contact: {0}}" Margin="0,2"/>
                                            <TextBlock Text="{Binding Address, StringFormat=Patient Address: {0}}" Margin="0,2"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding AdmitDate, StringFormat=Admit Date: {0:MMMM dd, yyyy}}" Margin="0,2"/>
                                            <TextBlock Text="{Binding ReleaseDate, StringFormat=Release Date: {0:MMMM dd, yyyy}}" Margin="0,2"/>
                                            <TextBlock Text="{Binding DaysStayed, StringFormat=Days Spent at Hospital: {0}}" Margin="0,2"/>
                                            <TextBlock Text="{Binding DoctorName, StringFormat=Doctor Name: {0}}" Margin="0,2"/>
                                        </StackPanel>
                                    </Grid>

                                    <Border Background="#F8F9FA"
                                            Padding="12"
                                            CornerRadius="6"
                                            Margin="0,0,0,18">
                                        <StackPanel>
                                            <TextBlock Text="Charge Breakdown"
                                                       FontWeight="Bold"
                                                       Margin="0,0,0,8"/>
                                            <UniformGrid Columns="2">
                                                <TextBlock Text="Room Charge"/>
                                                <TextBlock Text="{Binding RoomCharge, StringFormat={}{0:C}}" TextAlignment="Right"/>
                                                <TextBlock Text="Doctor Fee"/>
                                                <TextBlock Text="{Binding DoctorFee, StringFormat={}{0:C}}" TextAlignment="Right"/>
                                                <TextBlock Text="Medicine Cost"/>
                                                <TextBlock Text="{Binding MedicineCost, StringFormat={}{0:C}}" TextAlignment="Right"/>
                                                <TextBlock Text="Other Charges"/>
                                                <TextBlock Text="{Binding OtherCharge, StringFormat={}{0:C}}" TextAlignment="Right"/>
                                            </UniformGrid>
                                        </StackPanel>
                                    </Border>

                                    <TextBlock Text="{Binding Total, StringFormat=Total: {0:C}}"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               HorizontalAlignment="Right"
                                               Margin="0,0,0,18"/>

                                    <Button Content="Download Summary"
                                            Padding="24,10"
                                            Background="#0D6EFD"
                                            Foreground="White"
                                            FontSize="15"
                                            FontWeight="SemiBold"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            HorizontalAlignment="Center"
                                            IsEnabled="False"
                                            ToolTip="Download support coming soon"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
