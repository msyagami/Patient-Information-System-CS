<UserControl x:Class="Patient_Information_System_CS.Views.Patient.InsuranceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#0D6EFD" Offset="0"/>
                    <GradientStop Color="#6F42C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock Text="Insurance Details" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Form Container -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border MaxWidth="600" Margin="50,30">
                <StackPanel>
                    
                    <!-- Insurance Provider -->
                    <TextBlock Text="Insurance Provider:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <TextBox Text="ABC Medical INC" 
                             Padding="10"
                             FontSize="14"
                             Margin="0,0,0,15"/>

                    <!-- Policy Number -->
                    <TextBlock Text="Policy Number:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <TextBox Text="215858472" 
                             Padding="10"
                             FontSize="14"
                             Margin="0,0,0,15"/>

                    <!-- Group Number -->
                    <TextBlock Text="Group Number:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <TextBox Text="026462574" 
                             Padding="10"
                             FontSize="14"
                             Margin="0,0,0,15"/>

                    <!-- Effective Date -->
                    <TextBlock Text="Effective Date:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <DatePicker SelectedDate="2015-02-26"
                                Padding="10"
                                FontSize="14"
                                Margin="0,0,0,15"/>

                    <!-- Expiration Date -->
                    <TextBlock Text="Expiration Date:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <DatePicker SelectedDate="2025-02-26"
                                Padding="10"
                                FontSize="14"
                                Margin="0,0,0,15"/>

                    <!-- Copayment Information -->
                    <TextBlock Text="Copayment Information:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <TextBox Text="Primary care physician (PCP) visit: $15" 
                             Padding="10"
                             FontSize="14"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,30"/>

                    <!-- Save Button -->
                    <Button Content="Save" 
                            Background="#0D6EFD"
                            Foreground="White"
                            Padding="60,12"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="16"
                            FontWeight="SemiBold"/>
                    
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
