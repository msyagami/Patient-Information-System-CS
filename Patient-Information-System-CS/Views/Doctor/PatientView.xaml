<UserControl x:Class="Patient_Information_System_CS.Views.Doctor.PatientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" 
                Background="#0D6EFD" 
                Padding="15"
                CornerRadius="5,5,0,0"
                Margin="0,0,0,0">
            <TextBlock Text="Your Discharged Patient List" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- DataGrid Section -->
        <Border Grid.Row="1" 
                BorderBrush="#DEE2E6" 
                BorderThickness="1"
                CornerRadius="0,0,5,5"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Control Bar -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Show " VerticalAlignment="Center"/>
                        <ComboBox Width="70" SelectedIndex="0" Margin="5,0">
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="25"/>
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                        </ComboBox>
                        <TextBlock Text=" entries" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Search: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Width="250" Padding="5"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" 
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#F8F9FA"
                          RowHeight="40"
                          Background="White">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" 
                                            Width="*"
                                            Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Admit Date" 
                                            Width="*"
                                            Binding="{Binding AdmitDate}"/>
                        <DataGridTextColumn Header="Release Date" 
                                            Width="*"
                                            Binding="{Binding ReleaseDate}"/>
                        <DataGridTextColumn Header="Symptoms" 
                                            Width="*"
                                            Binding="{Binding Symptoms}"/>
                        <DataGridTextColumn Header="Contact" 
                                            Width="*"
                                            Binding="{Binding Contact}"/>
                        <DataGridTextColumn Header="Address" 
                                            Width="2*"
                                            Binding="{Binding Address}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination Bar -->
                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Showing 1 to 3 of 3 entries" 
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Previous" 
                                Padding="10,5" 
                                Margin="0,0,5,0"
                                IsEnabled="False"/>
                        <Button Content="1" 
                                Padding="10,5" 
                                Margin="0,0,5,0"
                                Background="#0D6EFD"
                                Foreground="White"
                                BorderThickness="0"/>
                        <Button Content="Next" 
                                Padding="10,5"
                                IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
