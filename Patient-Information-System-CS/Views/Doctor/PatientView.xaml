<UserControl x:Class="Patient_Information_System_CS.Views.Doctor.PatientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <Border Background="#0D6EFD"
                    Padding="16"
                    CornerRadius="6,6,0,0">
                <TextBlock Text="Currently admitted patients"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"/>
            </Border>

            <Border BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="0,0,6,6"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="ActivePatientsEmptyTextBlock"
                               Grid.Row="0"
                               Text="No patients are currently admitted under your care."
                               FontSize="14"
                               Foreground="#4B5563"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,12"
                               Visibility="Collapsed"/>

                    <DataGrid x:Name="ActivePatientsDataGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F8F9FA"
                              RowHeight="36">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Patient"
                                                Width="2*"
                                                Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Admitted"
                                                Width="*"
                                                Binding="{Binding AdmitDate}"/>
                            <DataGridTextColumn Header="Room"
                                                Width="*"
                                                Binding="{Binding Room}"/>
                            <DataGridTextColumn Header="Contact"
                                                Width="*"
                                                Binding="{Binding Contact}"/>
                            <DataGridTextColumn Header="Insurance"
                                                Width="*"
                                                Binding="{Binding Insurance}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <Border Background="#1E293B"
                    Padding="16"
                    CornerRadius="6,6,0,0"
                    Margin="0,24,0,0">
                <TextBlock Text="Recently discharged patients"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"/>
            </Border>

            <Border BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="0,0,6,6"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="DischargedPatientsEmptyTextBlock"
                               Grid.Row="0"
                               Text="No discharges recorded for your patients yet."
                               FontSize="14"
                               Foreground="#4B5563"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,12"
                               Visibility="Collapsed"/>

                    <DataGrid x:Name="DischargedPatientsDataGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F8F9FA"
                              RowHeight="36">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Patient"
                                                Width="2*"
                                                Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Admitted"
                                                Width="*"
                                                Binding="{Binding AdmitDate}"/>
                            <DataGridTextColumn Header="Discharged"
                                                Width="*"
                                                Binding="{Binding DischargeDate}"/>
                            <DataGridTextColumn Header="Outstanding"
                                                Width="*"
                                                Binding="{Binding OutstandingBalance}"/>
                            <DataGridTextColumn Header="Contact"
                                                Width="*"
                                                Binding="{Binding Contact}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
