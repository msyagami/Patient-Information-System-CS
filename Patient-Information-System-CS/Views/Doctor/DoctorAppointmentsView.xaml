<UserControl x:Class="Patient_Information_System_CS.Views.Doctor.DoctorAppointmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="White">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - Appointment List -->
        <Border Grid.Column="0" 
                BorderBrush="#DEE2E6" 
                BorderThickness="1"
                CornerRadius="5"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" 
                           Text="Appointments" 
                           FontSize="22" 
                           FontWeight="Bold"
                           Margin="0,0,0,15"
                           Foreground="#2C3E50"/>

                <!-- Appointments DataGrid -->
                <DataGrid Grid.Row="1" 
                          x:Name="AppointmentsDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#F8F9FA"
                          RowHeight="40"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date &amp; Time" 
                                            Width="*"
                                            Binding="{Binding DateTime}"/>
                        <DataGridTextColumn Header="Patient Name" 
                                            Width="*"
                                            Binding="{Binding PatientName}"/>
                        <DataGridTextColumn Header="Status" 
                                            Width="*"
                                            Binding="{Binding Status}"/>
                        <DataGridTemplateColumn Header="Action" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Manage" 
                                            Background="#0D6EFD"
                                            Foreground="White"
                                            Padding="10,5"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Margin="5,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Right Side - Appointment Details/Management Panel -->
        <Border Grid.Column="2" 
                BorderBrush="#DEE2E6" 
                BorderThickness="1"
                CornerRadius="5"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Panel Title -->
                    <TextBlock Text="Appointment Details &amp; Management" 
                               FontSize="22" 
                               FontWeight="Bold"
                               Margin="0,0,0,20"
                               Foreground="#2C3E50"/>

                    <!-- Patient Information Section -->
                    <Border Background="#F8F9FA" 
                            Padding="15"
                            CornerRadius="5"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Patient Information" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Name: Mike Jordan Candido" Margin="0,3"/>
                            <TextBlock Text="Contact: 09462566352" Margin="0,3"/>
                            <TextBlock Text="Date: March 18, 2024 - 9:00AM" Margin="0,3"/>
                        </StackPanel>
                    </Border>

                    <!-- Medical Records Input -->
                    <TextBlock Text="Medical Records:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <TextBox Height="100"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Padding="10"
                             FontSize="14"
                             Margin="0,0,0,15"/>

                    <!-- Diagnosis Input -->
                    <TextBlock Text="Diagnosis:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <TextBox Height="100"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Padding="10"
                             FontSize="14"
                             Margin="0,0,0,15"
                             Text="Fever"/>

                    <!-- Treatment Input -->
                    <TextBlock Text="Treatment:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <TextBox Height="100"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Padding="10"
                             FontSize="14"
                             Margin="0,0,0,15"/>

                    <!-- Prescriptions Input -->
                    <TextBlock Text="Prescriptions:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <TextBox Height="100"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Padding="10"
                             FontSize="14"
                             Margin="0,0,0,20"/>

                    <!-- Status Modification -->
                    <TextBlock Text="Appointment Status:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <RadioButton Content="Pending" 
                                     GroupName="Status"
                                     Margin="0,0,20,0"
                                     IsChecked="True"/>
                        <RadioButton Content="Confirmed" 
                                     GroupName="Status"
                                     Margin="0,0,20,0"/>
                        <RadioButton Content="Completed" 
                                     GroupName="Status"
                                     Margin="0,0,20,0"/>
                        <RadioButton Content="Cancelled" 
                                     GroupName="Status"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Content="Save Record" 
                                Background="#28A745"
                                Foreground="White"
                                Padding="30,12"
                                FontSize="16"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,10,0"/>
                        <Button Content="Update Appointment" 
                                Background="#0D6EFD"
                                Foreground="White"
                                Padding="30,12"
                                FontSize="16"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
