<UserControl x:Class="Patient_Information_System_CS.Views.Doctor.DoctorDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <UniformGrid Grid.Row="0"
                     Columns="3"
                     Margin="0,0,0,20">
            <Border Background="#1E293B"
                    Margin="0,0,10,0"
                    Padding="24"
                    CornerRadius="6">
                <StackPanel>
                    <TextBlock x:Name="DoctorAppointmentsValueTextBlock"
                               FontSize="40"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="0"/>
                    <TextBlock Text="Upcoming appointments"
                               FontSize="14"
                               Foreground="White"
                               Margin="0,8,0,0"/>
                    <TextBlock x:Name="DoctorAppointmentsSubtitleTextBlock"
                               FontSize="12"
                               Foreground="#E2E8F0"
                               Text="0 scheduled today"/>
                </StackPanel>
            </Border>

            <Border Background="#047857"
                    Margin="5,0,5,0"
                    Padding="24"
                    CornerRadius="6">
                <StackPanel>
                    <TextBlock x:Name="DoctorPatientsValueTextBlock"
                               FontSize="40"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="0"/>
                    <TextBlock Text="Active patients"
                               FontSize="14"
                               Foreground="White"
                               Margin="0,8,0,0"/>
                    <TextBlock x:Name="DoctorPatientsSubtitleTextBlock"
                               FontSize="12"
                               Foreground="#D1FAE5"
                               Text="0 currently admitted"/>
                </StackPanel>
            </Border>

            <Border Background="#7C3AED"
                    Margin="10,0,0,0"
                    Padding="24"
                    CornerRadius="6">
                <StackPanel>
                    <TextBlock x:Name="DoctorDischargedValueTextBlock"
                               FontSize="40"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="0"/>
                    <TextBlock Text="Recent discharges"
                               FontSize="14"
                               Foreground="White"
                               Margin="0,8,0,0"/>
                    <TextBlock x:Name="DoctorDischargedSubtitleTextBlock"
                               FontSize="12"
                               Foreground="#EDE9FE"
                               Text="Past 30 days"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <Border Grid.Row="1"
                Background="#0D6EFD"
                Padding="16"
                CornerRadius="6,6,0,0">
            <TextBlock Text="Upcoming appointments"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>

        <Border Grid.Row="2"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                CornerRadius="0,0,6,6"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock x:Name="AppointmentsEmptyTextBlock"
                               Text="No upcoming appointments scheduled."
                               FontSize="14"
                               Foreground="#4B5563"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,20"
                               Visibility="Collapsed"/>

                    <DataGrid x:Name="UpcomingAppointmentsDataGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F8F9FA"
                              RowHeight="40"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="When"
                                                Width="2*"
                                                Binding="{Binding ScheduledFor}"/>
                            <DataGridTextColumn Header="Patient"
                                                Width="2*"
                                                Binding="{Binding PatientName}"/>
                            <DataGridTextColumn Header="Status"
                                                Width="*"
                                                Binding="{Binding Status}"/>
                            <DataGridTextColumn Header="Notes"
                                                Width="2*"
                                                Binding="{Binding Description}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>

                <TextBlock x:Name="AppointmentsSummaryTextBlock"
                           Grid.Row="1"
                           FontSize="12"
                           Foreground="#6B7280"
                           Text=""/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
