<Window x:Class="Patient_Information_System_CS.Views.Admin.Dialogs.AddDoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="Register Doctor"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="White"
        MinWidth="520">
    <Grid Margin="26">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Enter the doctor profile details"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="#1F2937"/>

        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Full name"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="FullNameTextBox"
                 Grid.Row="1" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Email"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="EmailTextBox"
                 Grid.Row="2" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Department"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="DepartmentTextBox"
                 Grid.Row="3" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="License #"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="LicenseTextBox"
                 Grid.Row="4" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="5" Grid.Column="0"
                   Text="Contact"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="ContactTextBox"
                 Grid.Row="5" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="6" Grid.Column="0"
               Text="Birth date"
               VerticalAlignment="Center"
               Margin="0,0,12,0"/>
        <DatePicker x:Name="BirthDatePicker"
                Grid.Row="6" Grid.Column="1"
                SelectedDate="{x:Static System:DateTime.Today}"
                Margin="0,0,0,12"/>

        <TextBlock Grid.Row="7" Grid.Column="0"
               Text="Sex"
               VerticalAlignment="Center"
               Margin="0,0,12,0"/>
        <ComboBox x:Name="SexComboBox"
              Grid.Row="7" Grid.Column="1"
              SelectedValuePath="Tag"
              Margin="0,0,0,12">
            <ComboBoxItem Content="Female" Tag="F"/>
            <ComboBoxItem Content="Male" Tag="M"/>
            <ComboBoxItem Content="Unspecified" Tag="U"/>
        </ComboBox>

        <TextBlock Grid.Row="8" Grid.Column="0"
                   Text="Address"
                   VerticalAlignment="Top"
                   Margin="0,4,12,0"/>
        <TextBox x:Name="AddressTextBox"
             Grid.Row="8" Grid.Column="1"
                 Margin="0,0,0,12"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Height="70"/>

        <TextBlock Grid.Row="9" Grid.Column="0"
               Text="Emergency contact"
               VerticalAlignment="Center"
               Margin="0,4,12,0"/>
        <TextBox x:Name="EmergencyContactTextBox"
             Grid.Row="9" Grid.Column="1"
             Margin="0,0,0,12"/>

        <TextBlock Grid.Row="10" Grid.Column="0"
               Text="Relationship"
               VerticalAlignment="Center"
               Margin="0,4,12,0"/>
        <TextBox x:Name="EmergencyRelationshipTextBox"
             Grid.Row="10" Grid.Column="1"
             Margin="0,0,0,12"/>

        <TextBlock Grid.Row="11" Grid.Column="0"
               Text="Nationality"
               VerticalAlignment="Center"
               Margin="0,4,12,0"/>
        <TextBox x:Name="NationalityTextBox"
             Grid.Row="11" Grid.Column="1"
             Margin="0,0,0,12"/>

        <StackPanel Grid.Row="12" Grid.Column="0"
                    Orientation="Horizontal"
                    Margin="0,4,12,0"
                    VerticalAlignment="Center">
            <TextBlock Text="Status"/>
        </StackPanel>
        <ComboBox x:Name="StatusComboBox"
              Grid.Row="12" Grid.Column="1"
                  Margin="0,0,0,18"
                  MinWidth="200"/>

        <TextBlock x:Name="ErrorTextBlock"
               Grid.Row="13" Grid.ColumnSpan="2"
                   Foreground="#B91C1C"
                   Visibility="Collapsed"
                   Margin="0,0,0,12"/>

        <StackPanel Grid.Row="14" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="Save"
                    Width="100"
                    Background="#2563EB"
                    Foreground="White"
                    BorderThickness="0"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
