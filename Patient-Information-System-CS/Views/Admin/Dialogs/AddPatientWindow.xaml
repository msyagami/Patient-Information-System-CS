<Window x:Class="Patient_Information_System_CS.Views.Admin.Dialogs.AddPatientWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Patient Record"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="White"
        MinWidth="560">
    <Grid Margin="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Capture core patient information"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,18"
                   Foreground="#1F2937"/>

        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Full name"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="FullNameTextBox"
                 Grid.Row="1" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Email"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="EmailTextBox"
                 Grid.Row="2" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Contact number"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="ContactTextBox"
                 Grid.Row="3" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Address"
                   VerticalAlignment="Top"
                   Margin="0,4,12,0"/>
        <TextBox x:Name="AddressTextBox"
                 Grid.Row="4" Grid.Column="1"
                 Margin="0,0,0,12"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Height="70"/>

        <TextBlock Grid.Row="5" Grid.Column="0"
                   Text="Date of birth"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <DatePicker x:Name="BirthDatePicker"
                    Grid.Row="5" Grid.Column="1"
                    Margin="0,0,0,12"/>

        <TextBlock Grid.Row="6" Grid.Column="0"
                   Text="Assign doctor"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <ComboBox x:Name="DoctorComboBox"
                  Grid.Row="6" Grid.Column="1"
                  DisplayMemberPath="DisplayName"
                  Margin="0,0,0,12"/>

        <TextBlock Grid.Row="7" Grid.Column="0"
                   Text="Insurance"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="InsuranceTextBox"
                 Grid.Row="7" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="8" Grid.Column="0"
                   Text="Emergency contact"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="EmergencyTextBox"
                 Grid.Row="8" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <StackPanel Grid.Row="9" Grid.Column="0"
                    Orientation="Vertical"
                    Margin="0,0,12,0">
            <CheckBox x:Name="ApproveCheckBox"
                      Content="Mark as approved"/>
            <CheckBox x:Name="CurrentlyAdmittedCheckBox"
                      Content="Currently admitted"
                      Margin="0,8,0,0"
                      Checked="CurrentlyAdmittedCheckBox_OnChanged"
                      Unchecked="CurrentlyAdmittedCheckBox_OnChanged"/>
        </StackPanel>
        <StackPanel Grid.Row="9" Grid.Column="1"
                    Orientation="Vertical"
                    Margin="0,0,0,12">
            <TextBlock Text="Room assignment"
                       Margin="0,0,0,4"/>
            <TextBox x:Name="RoomTextBox"
                     IsEnabled="False"
                     Text="Room 101 - General Ward"/>
        </StackPanel>

        <TextBlock x:Name="ErrorTextBlock"
                   Grid.Row="10" Grid.ColumnSpan="2"
                   Foreground="#B91C1C"
                   Visibility="Collapsed"
                   Margin="0,0,0,12"/>

        <StackPanel Grid.Row="11" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="Save"
                    Width="100"
                    Background="#047857"
                    Foreground="White"
                    BorderThickness="0"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
