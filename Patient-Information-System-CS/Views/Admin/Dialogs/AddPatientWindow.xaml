<Window x:Class="Patient_Information_System_CS.Views.Admin.Dialogs.AddPatientWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="Add Patient Record"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="White"
        MinWidth="560">
    <Grid Margin="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Capture core patient information"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,18"
                   Foreground="#1F2937"/>

        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Full name"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="FullNameTextBox"
                 Grid.Row="1" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Email"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="EmailTextBox"
                 Grid.Row="2" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Contact number"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="ContactTextBox"
                 Grid.Row="3" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Address"
                   VerticalAlignment="Top"
                   Margin="0,4,12,0"/>
        <TextBox x:Name="AddressTextBox"
                 Grid.Row="4" Grid.Column="1"
                 Margin="0,0,0,12"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Height="70"/>

        <TextBlock Grid.Row="5" Grid.Column="0"
                   Text="Date of birth"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <DatePicker x:Name="BirthDatePicker"
                    Grid.Row="5" Grid.Column="1"
                    SelectedDate="{x:Static System:DateTime.Today}"
                    Margin="0,0,0,12"/>

        <TextBlock Grid.Row="6" Grid.Column="0"
                   Text="Sex"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <ComboBox x:Name="SexComboBox"
                  Grid.Row="6" Grid.Column="1"
                  SelectedValuePath="Tag"
                  Margin="0,0,0,12">
            <ComboBoxItem Content="Female" Tag="F"/>
            <ComboBoxItem Content="Male" Tag="M"/>
            <ComboBoxItem Content="Unspecified" Tag="U"/>
        </ComboBox>

        <TextBlock Grid.Row="7" Grid.Column="0"
                   Text="Assign doctor"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <ComboBox x:Name="DoctorComboBox"
              Grid.Row="7" Grid.Column="1"
              Margin="0,0,0,12">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding DoctorProfile.Department}" FontSize="11" Foreground="#6B7280"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Grid.Row="8" Grid.Column="0"
                   Text="Assign nurse"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <ComboBox x:Name="NurseComboBox"
              Grid.Row="8" Grid.Column="1"
              Margin="0,0,0,12">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding NurseProfile.Department}" FontSize="11" Foreground="#6B7280"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Grid.Row="9" Grid.Column="0"
                   Text="Insurance"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="InsuranceTextBox"
                 Grid.Row="9" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="10" Grid.Column="0"
                   Text="Emergency contact"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="EmergencyTextBox"
                 Grid.Row="10" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="11" Grid.Column="0"
                   Text="Relationship"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="EmergencyRelationshipTextBox"
                 Grid.Row="11" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="12" Grid.Column="0"
                   Text="Nationality"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0"/>
        <TextBox x:Name="NationalityTextBox"
                 Grid.Row="12" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <StackPanel Grid.Row="13" Grid.Column="0"
                    Orientation="Vertical"
                    Margin="0,0,12,0">
            <CheckBox x:Name="ApproveCheckBox"
                      Content="Mark as approved"/>
            <CheckBox x:Name="CurrentlyAdmittedCheckBox"
                      Content="Currently admitted"
                      Margin="0,8,0,0"
                      Checked="CurrentlyAdmittedCheckBox_OnChanged"
                      Unchecked="CurrentlyAdmittedCheckBox_OnChanged"/>
        </StackPanel>
        <StackPanel Grid.Row="13" Grid.Column="1"
                    Orientation="Vertical"
                    Margin="0,0,0,12">
            <TextBlock Text="Room assignment"
                       Margin="0,0,0,4"/>
            <ComboBox x:Name="RoomComboBox"
                      IsEnabled="False"
                      MinWidth="240">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="Room {0} - {1} ({2}/{3} occupied)">
                                    <Binding Path="RoomNumber"/>
                                    <Binding Path="RoomType"/>
                                    <Binding Path="OccupiedCount"/>
                                    <Binding Path="Capacity"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <TextBlock x:Name="ErrorTextBlock"
               Grid.Row="14" Grid.ColumnSpan="2"
                   Foreground="#B91C1C"
                   Visibility="Collapsed"
                   Margin="0,0,0,12"/>

        <StackPanel Grid.Row="15" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="Save"
                    Width="100"
                    Background="#047857"
                    Foreground="White"
                    BorderThickness="0"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
