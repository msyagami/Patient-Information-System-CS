<Window x:Class="Patient_Information_System_CS.Views.Admin.Dialogs.DischargeBillingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Discharge Billing"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="White"
        MinWidth="420">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Text="Finalize the discharge by recording the billing details."
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,18"/>

        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Room charge"
                   VerticalAlignment="Center"
                   Margin="0,0,16,0"/>
        <TextBox x:Name="RoomChargeTextBox"
                 Grid.Row="1" Grid.Column="1"
                 Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Doctor fee"
                   VerticalAlignment="Center"
                   Margin="0,0,16,0"/>
        <TextBox x:Name="DoctorFeeTextBox"
                 Grid.Row="2" Grid.Column="1"
                 Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Medicine cost"
                   VerticalAlignment="Center"
                   Margin="0,0,16,0"/>
        <TextBox x:Name="MedicineCostTextBox"
                 Grid.Row="3" Grid.Column="1"
                 Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Other charges"
                   VerticalAlignment="Center"
                   Margin="0,0,16,0"/>
        <StackPanel Grid.Row="4" Grid.Column="1"
                    Margin="0,0,0,10">
            <TextBox x:Name="OtherChargesTextBox"/>
            <CheckBox x:Name="MarkAsPaidCheckBox"
                      Content="Mark as paid"
                      Margin="0,8,0,0"/>
        </StackPanel>

        <TextBlock Grid.Row="5" Grid.Column="0"
                   Text="Notes"
                   VerticalAlignment="Top"
                   Margin="0,0,16,0"/>
        <StackPanel Grid.Row="5" Grid.Column="1">
            <TextBox x:Name="NotesTextBox"
                     Height="70"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"/>
            <TextBlock x:Name="ErrorTextBlock"
                       Foreground="#B91C1C"
                       Margin="0,8,0,0"
                       Visibility="Collapsed"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,12,0,0">
                <Button Content="Cancel"
                        Width="90"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"/>
                <Button Content="Confirm"
                        Width="90"
                        Background="#2563EB"
                        Foreground="White"
                        BorderThickness="0"
                        Click="ConfirmButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
