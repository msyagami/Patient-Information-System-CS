<Window x:Class="Patient_Information_System_CS.Views.Admin.Dialogs.AddStaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="Add Staff Account"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="White"
        MinWidth="460">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Provide the details for the new staff member"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,18"
                   Foreground="#2C3E50"/>

        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Full name"
                   VerticalAlignment="Center"
                   Margin="0,0,16,0"/>
        <TextBox x:Name="FullNameTextBox"
                 Grid.Row="1" Grid.Column="1"
                 MinWidth="240"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Email"
                   VerticalAlignment="Center"
                   Margin="0,0,16,0"/>
        <TextBox x:Name="EmailTextBox"
                 Grid.Row="2" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Contact number"
                   VerticalAlignment="Top"
                   Margin="0,0,16,0"/>
        <StackPanel Grid.Row="3" Grid.Column="1"
                    Margin="0,0,0,12">
            <TextBox x:Name="ContactTextBox" Margin="0,0,0,8"/>
            <CheckBox x:Name="ApproveCheckBox"
                      Content="Mark as approved"/>
        </StackPanel>

        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Birth date"
                   VerticalAlignment="Center"
                   Margin="0,0,16,0"/>
        <DatePicker x:Name="BirthDatePicker"
                    Grid.Row="4" Grid.Column="1"
                    SelectedDate="{x:Static System:DateTime.Today}"
                    Margin="0,0,0,12"/>

        <TextBlock Grid.Row="5" Grid.Column="0"
                   Text="Sex"
                   VerticalAlignment="Center"
                   Margin="0,0,16,0"/>
        <ComboBox x:Name="SexComboBox"
                  Grid.Row="5" Grid.Column="1"
                  SelectedValuePath="Tag"
                  Margin="0,0,0,12">
            <ComboBoxItem Content="Female" Tag="F"/>
            <ComboBoxItem Content="Male" Tag="M"/>
            <ComboBoxItem Content="Unspecified" Tag="U"/>
        </ComboBox>

        <TextBlock Grid.Row="6" Grid.Column="0"
                   Text="Address"
                   VerticalAlignment="Top"
                   Margin="0,0,16,0"/>
        <TextBox x:Name="AddressTextBox"
                 Grid.Row="6" Grid.Column="1"
                 Height="70"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="7" Grid.Column="0"
                   Text="Emergency contact"
                   VerticalAlignment="Center"
                   Margin="0,0,16,0"/>
        <TextBox x:Name="EmergencyContactTextBox"
                 Grid.Row="7" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="8" Grid.Column="0"
                   Text="Relationship"
                   VerticalAlignment="Center"
                   Margin="0,0,16,0"/>
        <TextBox x:Name="EmergencyRelationshipTextBox"
                 Grid.Row="8" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock Grid.Row="9" Grid.Column="0"
                   Text="Nationality"
                   VerticalAlignment="Center"
                   Margin="0,0,16,0"/>
        <TextBox x:Name="NationalityTextBox"
                 Grid.Row="9" Grid.Column="1"
                 Margin="0,0,0,12"/>

        <TextBlock x:Name="ErrorTextBlock"
                   Grid.Row="10" Grid.ColumnSpan="2"
                   Foreground="#B91C1C"
                   Visibility="Collapsed"
                   Margin="0,0,0,12"/>

        <StackPanel Grid.Row="11" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Cancel"
                    Width="90"
                    Margin="0,0,8,0"
                    Click="CancelButton_Click"/>
            <Button Content="Save"
                    Width="90"
                    Background="#28A745"
                    Foreground="White"
                    BorderThickness="0"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
