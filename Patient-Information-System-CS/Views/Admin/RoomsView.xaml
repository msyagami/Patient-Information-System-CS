<UserControl x:Class="Patient_Information_System_CS.Views.Admin.RoomsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Add Button -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Room Management"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       VerticalAlignment="Center"/>
            <Button Content="+ Add Room"
                    Background="#0D6EFD"
                    Foreground="White"
                    Padding="20,10"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    HorizontalAlignment="Right"
                    Click="AddRoomButton_Click"/>
        </Grid>

        <!-- Summary Cards -->
        <UniformGrid Grid.Row="1" Columns="2" Margin="0,0,0,20">
            <Border Background="#14532D"
                    Margin="0,0,10,0"
                    Padding="24"
                    CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="Available Rooms"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock x:Name="AvailableRoomsCountTextBlock"
                               FontSize="40"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,4,0,0"/>
                    <TextBlock x:Name="AvailableRoomsDetailTextBlock"
                               FontSize="13"
                               Foreground="White"
                               Opacity="0.85"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="#B91C1C"
                    Margin="10,0,0,0"
                    Padding="24"
                    CornerRadius="6">
                <StackPanel>
                    <TextBlock Text="Rooms In Use"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock x:Name="OccupiedRoomsCountTextBlock"
                               FontSize="40"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,4,0,0"/>
                    <TextBlock x:Name="OccupiedRoomsDetailTextBlock"
                               FontSize="13"
                               Foreground="White"
                               Opacity="0.85"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Tabbed Room Lists -->
        <TabControl Grid.Row="2" FontSize="14">
            <TabItem Header="Rooms In Use" Padding="15,10">
                <Border BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="5" Padding="15">
                    <DataGrid x:Name="RoomsInUseGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F8F9FA"
                              RowHeight="60">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Room"
                                                Binding="{Binding RoomNumber}"
                                                Width="Auto"
                                                MinWidth="80"/>
                            <DataGridTextColumn Header="Type"
                                                Binding="{Binding RoomType}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Capacity"
                                                Binding="{Binding Capacity}"
                                                Width="Auto"
                                                MinWidth="90"/>
                            <DataGridTextColumn Header="Occupancy"
                                                Binding="{Binding OccupancyDisplay}"
                                                Width="Auto"
                                                MinWidth="110"/>
                            <DataGridTemplateColumn Header="Patients" Width="2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding OccupantSummary}"
                                                   TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>

            <TabItem Header="Available Rooms" Padding="15,10">
                <Border BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="5" Padding="15">
                    <DataGrid x:Name="AvailableRoomsGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F8F9FA"
                              RowHeight="45">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Room"
                                                Binding="{Binding RoomNumber}"
                                                Width="Auto"
                                                MinWidth="80"/>
                            <DataGridTextColumn Header="Type"
                                                Binding="{Binding RoomType}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Capacity"
                                                Binding="{Binding Capacity}"
                                                Width="Auto"
                                                MinWidth="90"/>
                            <DataGridTextColumn Header="Available Slots"
                                                Binding="{Binding AvailableSlots}"
                                                Width="Auto"
                                                MinWidth="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
