<UserControl x:Class="Patient_Information_System_CS.Views.Admin.AdminDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1200"
             Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Summary Cards -->
            <UniformGrid Grid.Row="0" Columns="3" Margin="0,0,0,30">
                <!-- Card 1: Active Doctors -->
                <Border Background="#B91C1C"
                        Margin="0,0,10,0"
                        Padding="30"
                        CornerRadius="6">
                    <StackPanel>
                        <TextBlock x:Name="ActiveDoctorsCountTextBlock"
                                   FontSize="46"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Active Doctors"
                                   FontSize="16"
                                   Foreground="White"
                                   Margin="0,6,0,0"/>
                        <TextBlock x:Name="PendingDoctorsTextBlock"
                                   FontSize="13"
                                   Foreground="White"
                                   Opacity="0.85"
                                   Margin="0,12,0,0"/>
                        <TextBlock x:Name="UnavailableDoctorsTextBlock"
                                   FontSize="13"
                                   Foreground="White"
                                   Opacity="0.85"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Card 2: Total Patients -->
                <Border Background="#C2410C"
                        Margin="5,0,5,0"
                        Padding="30"
                        CornerRadius="6">
                    <StackPanel>
                        <TextBlock x:Name="TotalPatientsCountTextBlock"
                                   FontSize="46"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Total Patients"
                                   FontSize="16"
                                   Foreground="White"
                                   Margin="0,6,0,0"/>
                        <TextBlock x:Name="AdmittedPatientsTextBlock"
                                   FontSize="13"
                                   Foreground="White"
                                   Opacity="0.85"
                                   Margin="0,12,0,0"/>
                        <TextBlock x:Name="PendingPatientsTextBlock"
                                   FontSize="13"
                                   Foreground="White"
                                   Opacity="0.85"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Card 3: Total Appointments -->
                <Border Background="#4338CA"
                        Margin="10,0,0,0"
                        Padding="30"
                        CornerRadius="6">
                    <StackPanel>
                        <TextBlock x:Name="TotalAppointmentsCountTextBlock"
                                   FontSize="46"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Appointments"
                                   FontSize="16"
                                   Foreground="White"
                                   Margin="0,6,0,0"/>
                        <TextBlock x:Name="PendingAppointmentsTextBlock"
                                   FontSize="13"
                                   Foreground="White"
                                   Opacity="0.85"
                                   Margin="0,12,0,0"/>
                        <TextBlock x:Name="TodayAppointmentsTextBlock"
                                   FontSize="13"
                                   Foreground="White"
                                   Opacity="0.85"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Data Charts Section -->
            <UniformGrid Grid.Row="1" Columns="3" Margin="0,0,0,30">
                
                <!-- Chart 1: Total Patients Data -->
                <Border Background="#F8F9FA" 
                        BorderBrush="#DEE2E6"
                        BorderThickness="1"
                        Margin="0,0,10,0"
                        Padding="20"
                        CornerRadius="5"
                        MinHeight="250">
                    <StackPanel>
                        <TextBlock Text="Patient Breakdown" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,12"
                                   Foreground="#2C3E50"/>
                        <ItemsControl x:Name="PatientBreakdownItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Label}"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Value}"
                                                   FontWeight="Bold"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Separator Margin="0,12,0,12"/>
                        <TextBlock x:Name="PatientTotalsSummaryTextBlock"
                                   FontStyle="Italic"
                                   Foreground="#4B5563"/>
                    </StackPanel>
                </Border>

                <!-- Chart 2: Patient Admission Timeline -->
                <Border Background="#F8F9FA" 
                        BorderBrush="#DEE2E6"
                        BorderThickness="1"
                        Margin="5,0,5,0"
                        Padding="20"
                        CornerRadius="5"
                        MinHeight="250">
                    <StackPanel>
                        <TextBlock Text="Admissions â€“ Last 7 Days" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,12"
                                   Foreground="#2C3E50"/>
                        <ItemsControl x:Name="AdmissionTrendItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,4,0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Label}"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Count}"
                                                       FontWeight="Bold"/>
                                        </Grid>
                                        <ProgressBar Minimum="0"
                                                     Maximum="100"
                                                     Value="{Binding Percent}"
                                                     Height="6"
                                                     Margin="0,6,0,0"
                                                     Foreground="#0D6EFD"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock x:Name="AdmissionsSummaryTextBlock"
                                   Margin="0,12,0,0"
                                   FontStyle="Italic"
                                   Foreground="#4B5563"/>
                    </StackPanel>
                </Border>

                <!-- Chart 3: Appointment Data -->
                <Border Background="#F8F9FA" 
                        BorderBrush="#DEE2E6"
                        BorderThickness="1"
                        Margin="10,0,0,0"
                        Padding="20"
                        CornerRadius="5"
                        MinHeight="250">
                    <StackPanel>
                        <TextBlock Text="Appointment Status"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,12"
                                   Foreground="#2C3E50"/>
                        <ItemsControl x:Name="AppointmentBreakdownItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Label}"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Value}"
                                                   FontWeight="Bold"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Separator Margin="0,12,0,12"/>
                        <TextBlock x:Name="AppointmentSummaryTextBlock"
                                   FontStyle="Italic"
                                   Foreground="#4B5563"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Recent Patients Section -->
            <StackPanel Grid.Row="2">
                <Border Background="#0D6EFD" 
                        Padding="15"
                        CornerRadius="5,5,0,0">
                    <TextBlock Text="Recent Patients" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                </Border>

                <Border BorderBrush="#DEE2E6" 
                        BorderThickness="1"
                        CornerRadius="0,0,5,5"
                        Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Control Bar -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="Show " VerticalAlignment="Center"/>
                                <ComboBox Width="70" SelectedIndex="0" Margin="5,0">
                                    <ComboBoxItem Content="10"/>
                                    <ComboBoxItem Content="25"/>
                                    <ComboBoxItem Content="50"/>
                                </ComboBox>
                                <TextBlock Text=" entries" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBlock Text="Search: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Width="250" Padding="5"/>
                            </StackPanel>
                        </Grid>

                        <!-- DataGrid -->
                        <DataGrid x:Name="RecentPatientsGrid"
                                  Grid.Row="1" 
                                  Height="250"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  AlternatingRowBackground="#F8F9FA"
                                  RowHeight="40">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Admission Date" 
                                                    Width="*"
                                                    Binding="{Binding AdmissionDateDisplay}"/>
                                <DataGridTextColumn Header="Name" 
                                                    Width="*"
                                                    Binding="{Binding Name}"/>
                                <DataGridTextColumn Header="Contact" 
                                                    Width="*"
                                                    Binding="{Binding Contact}"/>
                                <DataGridTextColumn Header="Status" 
                                                    Width="*"
                                                    Binding="{Binding Status}"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Pagination Bar -->
                        <Grid Grid.Row="2" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="RecentPatientsSummaryTextBlock"
                                       Grid.Column="0" 
                                       VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="Previous" 
                                        Padding="10,5" 
                                        Margin="0,0,5,0"/>
                                <Button Content="1" 
                                        Padding="10,5" 
                                        Background="#0D6EFD"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Margin="0,0,5,0"/>
                                <Button Content="2" 
                                        Padding="10,5" 
                                        Margin="0,0,5,0"/>
                                <Button Content="Next" 
                                        Padding="10,5"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
