<UserControl x:Class="Patient_Information_System_CS.Views.Admin.AdmissionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="White">
    <Grid Margin="20">
        <TabControl FontSize="14">

            <!-- New Admission Tab -->
            <TabItem Header="Patient Check-in / New Admission" Padding="15,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border MaxWidth="800" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Patient Admission Form" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,30"
                                       Foreground="#2C3E50"
                                       HorizontalAlignment="Center"/>

                            <TextBlock Text="Patient Name:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <TextBox x:Name="PatientNameTextBox"
                                     Height="35"
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,0,15"/>

                            <TextBlock Text="Date of Birth:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <DatePicker x:Name="BirthDatePicker"
                                        Height="35"
                                        Padding="10"
                                        FontSize="14"
                                        SelectedDate="{x:Static System:DateTime.Today}"
                                        Margin="0,0,0,15"/>

                            <TextBlock Text="Contact Number:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <TextBox x:Name="ContactTextBox"
                                     Height="35"
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,0,15"/>

                            <TextBlock Text="Address:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <TextBox x:Name="AddressTextBox"
                                     Height="80"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,0,15"/>

                            <TextBlock Text="Emergency Contact:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <TextBox x:Name="EmergencyContactTextBox"
                                     Height="35"
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,0,15"/>

                            <TextBlock Text="Insurance Details:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <TextBox x:Name="InsuranceTextBox"
                                     Height="35"
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,0,15"
                                     Text="No Insurance"/>

                            <TextBlock Text="Admitting Doctor:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <ComboBox x:Name="DoctorComboBox"
                                      Height="35"
                                      Padding="10"
                                      FontSize="14"
                                      DisplayMemberPath="DisplayName"
                                      SelectedValuePath="UserId"
                                      Margin="0,0,0,15"/>

                            <TextBlock Text="Room/Ward Assignment:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <ComboBox x:Name="RoomComboBox"
                                      Height="35"
                                      Padding="10"
                                      FontSize="14"
                                      DisplayMemberPath="DisplayLabel"
                                      SelectedValuePath="RoomId"
                                      Margin="0,0,0,20"/>

                            <Button Content="Confirm Admission" 
                                    Background="#28A745"
                                    Foreground="White"
                                    Padding="30,15"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    HorizontalAlignment="Center"
                                    Margin="0,10,0,0"
                                    Click="ConfirmAdmissionButton_Click"/>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
            </TabItem>

            <!-- Current Admissions Tab -->
            <TabItem Header="Current Admissions" Padding="15,10">
                <Border Margin="15"
                        BorderBrush="#DEE2E6"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="15">
                    <DataGrid x:Name="CurrentAdmissionsGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F8F9FA"
                              RowHeight="45">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Patient #"
                                                Width="*"
                                                Binding="{Binding PatientProfile.PatientNumber}"/>
                            <DataGridTextColumn Header="Name"
                                                Width="2*"
                                                Binding="{Binding DisplayName}"/>
                            <DataGridTextColumn Header="Admit Date"
                                                Width="*"
                                                Binding="{Binding PatientProfile.AdmitDate, StringFormat={}{0:MMM dd, yyyy}}"/>
                            <DataGridTextColumn Header="Room/Ward"
                                                Width="*"
                                                Binding="{Binding PatientProfile.RoomAssignment}"/>
                            <DataGridTextColumn Header="Admitting Doctor"
                                                Width="*"
                                                Binding="{Binding PatientProfile.AssignedDoctorName}"/>
                            <DataGridTemplateColumn Header="Action" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Initiate Discharge"
                                                Background="#DC3545"
                                                Foreground="White"
                                                Padding="15,8"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Click="DischargePatient_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>

            <!-- Reactivation Tab -->
            <TabItem Header="Awaiting Reactivation" Padding="15,10">
                <StackPanel Margin="15">
                    <TextBlock Text="Patients with unpaid bills or deactivated accounts"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    <DataGrid x:Name="ReactivationGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F8F9FA"
                              RowHeight="45">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Patient #"
                                                Width="*"
                                                Binding="{Binding PatientProfile.PatientNumber}"/>
                            <DataGridTextColumn Header="Name"
                                                Width="2*"
                                                Binding="{Binding DisplayName}"/>
                            <DataGridTextColumn Header="Status"
                                                Width="*"
                                                Binding="{Binding PatientPortalStatus}"/>
                            <DataGridTextColumn Header="Last Doctor"
                                                Width="*"
                                                Binding="{Binding PatientProfile.AssignedDoctorName}"/>
                            <DataGridTemplateColumn Header="Action" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Reactivate"
                                                Background="#0D6EFD"
                                                Foreground="White"
                                                Padding="12,6"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Click="ReactivatePatient_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
