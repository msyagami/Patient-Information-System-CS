<UserControl x:Class="Patient_Information_System_CS.Views.Staff.ReceptionistAppointmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="White">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - Appointment List -->
        <Border Grid.Column="0" 
                BorderBrush="#DEE2E6" 
                BorderThickness="1"
                CornerRadius="5"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" 
                           Text="Appointments" 
                           FontSize="22" 
                           FontWeight="Bold"
                           Margin="0,0,0,15"
                           Foreground="#2C3E50"/>

                <!-- Appointments DataGrid -->
                <DataGrid Grid.Row="1" 
                          x:Name="AppointmentsDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#F8F9FA"
                          RowHeight="40"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date &amp; Time" 
                                            Width="*"
                                            Binding="{Binding DateTime}"/>
                        <DataGridTextColumn Header="Patient Name" 
                                            Width="*"
                                            Binding="{Binding PatientName}"/>
                        <DataGridTextColumn Header="Doctor" 
                                            Width="*"
                                            Binding="{Binding Doctor}"/>
                        <DataGridTextColumn Header="Status" 
                                            Width="*"
                                            Binding="{Binding Status}"/>
                        <DataGridTemplateColumn Header="Action" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Manage" 
                                            Background="#0D6EFD"
                                            Foreground="White"
                                            Padding="10,5"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Margin="5,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Right Side - Appointment Management Panel -->
        <Border Grid.Column="2" 
                BorderBrush="#DEE2E6" 
                BorderThickness="1"
                CornerRadius="5"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Panel Title -->
                    <TextBlock Text="Appointment Management" 
                               FontSize="22" 
                               FontWeight="Bold"
                               Margin="0,0,0,20"
                               Foreground="#2C3E50"/>

                    <!-- Patient Selection -->
                    <TextBlock Text="Patient:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <ComboBox Height="35"
                              Padding="10"
                              FontSize="14"
                              Margin="0,0,0,15">
                        <ComboBoxItem Content="Mike Jordan Candido"/>
                        <ComboBoxItem Content="Ion Minase"/>
                        <ComboBoxItem Content="Select Patient..."/>
                    </ComboBox>

                    <!-- Doctor Selection -->
                    <TextBlock Text="Doctor:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <ComboBox Height="35"
                              Padding="10"
                              FontSize="14"
                              Margin="0,0,0,15">
                        <ComboBoxItem Content="Dr. Neuvillette Dragon"/>
                        <ComboBoxItem Content="Dr. Kujo Sara"/>
                        <ComboBoxItem Content="Select Doctor..."/>
                    </ComboBox>

                    <!-- Date & Time -->
                    <Grid Margin="0,10,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Date:" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <DatePicker Height="35"
                                        Padding="10"
                                        FontSize="14"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Time:" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox Height="35"
                                     Padding="10"
                                     FontSize="14"
                                     Text="9:00 AM"/>
                        </StackPanel>
                    </Grid>

                    <!-- Reason/Purpose -->
                    <TextBlock Text="Reason for Visit:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,5"/>
                    <TextBox Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Padding="10"
                             FontSize="14"
                             Margin="0,0,0,15"
                             Text="Fever"/>

                    <!-- Status Modification -->
                    <TextBlock Text="Appointment Status:" 
                               FontWeight="SemiBold"
                               Margin="0,10,0,10"/>
                    <ComboBox Height="35"
                              Padding="10"
                              FontSize="14"
                              Margin="0,0,0,20"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="Confirmed"/>
                        <ComboBoxItem Content="Completed"/>
                        <ComboBoxItem Content="Cancelled"/>
                    </ComboBox>

                    <!-- Invoice Linking Section -->
                    <Border Background="#FFF3CD" 
                            BorderBrush="#FFC107"
                            BorderThickness="1"
                            Padding="15"
                            CornerRadius="5"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="?? Invoice Management" 
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Foreground="#856404"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Link to Invoice:" 
                                       FontWeight="SemiBold"
                                       Foreground="#856404"
                                       Margin="0,0,0,5"/>
                            <ComboBox Height="35"
                                      Padding="10"
                                      FontSize="14"
                                      Margin="0,0,0,10">
                                <ComboBoxItem Content="Invoice #15 - Ion Minase"/>
                                <ComboBoxItem Content="Invoice #18 - Mike Jordan Candido"/>
                                <ComboBoxItem Content="Invoice #22 - Mike Jordan Candido"/>
                                <ComboBoxItem Content="No Invoice Linked" IsSelected="True"/>
                            </ComboBox>

                            <Button Content="Create New Invoice" 
                                    Background="#FFC107"
                                    Foreground="#856404"
                                    Padding="15,10"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Content="Book Appointment" 
                                Background="#28A745"
                                Foreground="White"
                                Padding="30,12"
                                FontSize="16"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,10,0"/>
                        <Button Content="Save Changes" 
                                Background="#0D6EFD"
                                Foreground="White"
                                Padding="30,12"
                                FontSize="16"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
