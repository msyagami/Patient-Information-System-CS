<UserControl x:Class="Patient_Information_System_CS.Views.Staff.ReceptionistPatientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <Grid Margin="0,0,0,20">
                <TextBlock Text="Patient directory"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1F2937"
                           VerticalAlignment="Center"/>
            </Grid>

            <Border Background="#0D6EFD"
                    Padding="16"
                    CornerRadius="6,6,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Currently admitted patients"
                               Grid.Column="0"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock x:Name="AdmittedCountTextBlock"
                               Grid.Column="1"
                               Margin="20,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#DBEAFE"
                               Text=""/>
                </Grid>
            </Border>

            <Border BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="0,0,6,6"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="AdmittedEmptyTextBlock"
                               Grid.Row="0"
                               Text="No active admissions found."
                               FontSize="14"
                               Foreground="#4B5563"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,12"
                               Visibility="Collapsed"/>

                    <DataGrid x:Name="AdmittedPatientsDataGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F8F9FA"
                              RowHeight="38">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Patient"
                                                Width="2*"
                                                Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Patient #"
                                                Width="*"
                                                Binding="{Binding PatientNumber}"/>
                            <DataGridTextColumn Header="Admitted"
                                                Width="*"
                                                Binding="{Binding AdmitDate}"/>
                            <DataGridTextColumn Header="Room"
                                                Width="*"
                                                Binding="{Binding Room}"/>
                            <DataGridTextColumn Header="Assigned doctor"
                                                Width="*"
                                                Binding="{Binding Doctor}"/>
                            <DataGridTextColumn Header="Contact"
                                                Width="*"
                                                Binding="{Binding Contact}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <Border Background="#1F2937"
                    Padding="16"
                    CornerRadius="6,6,0,0"
                    Margin="0,24,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Recently discharged patients"
                               Grid.Column="0"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock x:Name="DischargedCountTextBlock"
                               Grid.Column="1"
                               Margin="20,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#E5E7EB"
                               Text=""/>
                </Grid>
            </Border>

            <Border BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    CornerRadius="0,0,6,6"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="DischargedEmptyTextBlock"
                               Grid.Row="0"
                               Text="No discharged patients to display yet."
                               FontSize="14"
                               Foreground="#4B5563"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,12"
                               Visibility="Collapsed"/>

                    <DataGrid x:Name="DischargedPatientsDataGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F8F9FA"
                              RowHeight="38">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Patient"
                                                Width="2*"
                                                Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Patient #"
                                                Width="*"
                                                Binding="{Binding PatientNumber}"/>
                            <DataGridTextColumn Header="Admitted"
                                                Width="*"
                                                Binding="{Binding AdmitDate}"/>
                            <DataGridTextColumn Header="Discharged"
                                                Width="*"
                                                Binding="{Binding DischargeDate}"/>
                            <DataGridTextColumn Header="Outstanding"
                                                Width="*"
                                                Binding="{Binding OutstandingBalance}"/>
                            <DataGridTextColumn Header="Contact"
                                                Width="*"
                                                Binding="{Binding Contact}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
