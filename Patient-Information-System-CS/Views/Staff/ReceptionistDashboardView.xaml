<UserControl x:Class="Patient_Information_System_CS.Views.Staff.ReceptionistDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Summary Cards -->
            <UniformGrid Grid.Row="0" Columns="3" Margin="0,0,0,20">
                
                <!-- Card 1: Active Doctors -->
                <Border Background="#DC3545" 
                        Margin="0,0,10,0"
                        Padding="30"
                        CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="10" 
                                       FontSize="48" 
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Active Doctors" 
                                       FontSize="16"
                                       Foreground="White"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="Approval Required: 1" 
                                       FontSize="12"
                                       Foreground="White"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <Ellipse Grid.Column="1" 
                                 Width="60" 
                                 Height="60"
                                 Fill="White"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Card 2: Total Patients -->
                <Border Background="#FF8C00" 
                        Margin="5,0,5,0"
                        Padding="30"
                        CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="11" 
                                       FontSize="48" 
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Total Patients" 
                                       FontSize="16"
                                       Foreground="White"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="Wants to Admit: 3" 
                                       FontSize="12"
                                       Foreground="White"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <Ellipse Grid.Column="1" 
                                 Width="60" 
                                 Height="60"
                                 Fill="White"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Card 3: Total Appointments -->
                <Border Background="#5856D6" 
                        Margin="10,0,0,0"
                        Padding="30"
                        CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="7" 
                                       FontSize="48" 
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Total Appointments" 
                                       FontSize="16"
                                       Foreground="White"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="Pending Appointments: 1" 
                                       FontSize="12"
                                       Foreground="White"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <Ellipse Grid.Column="1" 
                                 Width="60" 
                                 Height="60"
                                 Fill="White"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
            </UniformGrid>

            <!-- Active Doctors List Section -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <!-- Title Bar -->
                <Border Background="#0D6EFD" 
                        Padding="15"
                        CornerRadius="5,5,0,0">
                    <TextBlock Text="Active Doctors List" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- DataGrid Section -->
                <Border BorderBrush="#DEE2E6" 
                        BorderThickness="1"
                        CornerRadius="0,0,5,5"
                        Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Control Bar -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="Show " VerticalAlignment="Center"/>
                                <ComboBox Width="70" SelectedIndex="0" Margin="5,0">
                                    <ComboBoxItem Content="10"/>
                                    <ComboBoxItem Content="25"/>
                                    <ComboBoxItem Content="50"/>
                                </ComboBox>
                                <TextBlock Text=" entries" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBlock Text="Search: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Width="250" Padding="5"/>
                            </StackPanel>
                        </Grid>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1" 
                                  Height="300"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  AlternatingRowBackground="#F8F9FA"
                                  RowHeight="40">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" 
                                                    Width="*"
                                                    Binding="{Binding Name}"/>
                                <DataGridTextColumn Header="Department" 
                                                    Width="2*"
                                                    Binding="{Binding Department}"/>
                                <DataGridTextColumn Header="Contact" 
                                                    Width="*"
                                                    Binding="{Binding Contact}"/>
                                <DataGridTextColumn Header="Status" 
                                                    Width="*"
                                                    Binding="{Binding Status}"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Pagination Bar -->
                        <Grid Grid.Row="2" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Showing 1 to 10 of 11 entries" 
                                       VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="Previous" 
                                        Padding="10,5" 
                                        Margin="0,0,5,0"/>
                                <Button Content="1" 
                                        Padding="10,5" 
                                        Margin="0,0,5,0"
                                        Background="#0D6EFD"
                                        Foreground="White"
                                        BorderThickness="0"/>
                                <Button Content="2" 
                                        Padding="10,5" 
                                        Margin="0,0,5,0"/>
                                <Button Content="Next" 
                                        Padding="10,5"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Footer Chart Placeholders -->
            <UniformGrid Grid.Row="2" Columns="3">
                <Border Background="#0D6EFD" 
                        Margin="0,0,10,0"
                        Padding="20"
                        CornerRadius="5"
                        Height="150">
                    <TextBlock Text="Total Patients Data" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <Border Background="#0D6EFD" 
                        Margin="5,0,5,0"
                        Padding="20"
                        CornerRadius="5"
                        Height="150">
                    <TextBlock Text="Patient Admission Timeline" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <Border Background="#0D6EFD" 
                        Margin="10,0,0,0"
                        Padding="20"
                        CornerRadius="5"
                        Height="150">
                    <TextBlock Text="Appointment Data" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </UniformGrid>
        </Grid>
    </ScrollViewer>
</UserControl>
