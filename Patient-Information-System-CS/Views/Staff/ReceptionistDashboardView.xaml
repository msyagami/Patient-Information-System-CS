<UserControl x:Class="Patient_Information_System_CS.Views.Staff.ReceptionistDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <UniformGrid Columns="3" Rows="2" Margin="0,0,0,10">
                <Border Background="#0F172A"
                        Margin="0,0,10,10"
                        Padding="24"
                        CornerRadius="6">
                    <StackPanel>
                        <TextBlock x:Name="ActiveDoctorsValueTextBlock"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Text="0"/>
                        <TextBlock Text="Active doctors"
                                   FontSize="14"
                                   Foreground="#E2E8F0"
                                   Margin="0,8,0,0"/>
                        <TextBlock x:Name="ActiveDoctorsSubtitleTextBlock"
                                   FontSize="12"
                                   Foreground="#94A3B8"
                                   Text=""/>
                    </StackPanel>
                </Border>

                <Border Background="#2563EB"
                        Margin="5,0,5,10"
                        Padding="24"
                        CornerRadius="6">
                    <StackPanel>
                        <TextBlock x:Name="PendingDoctorsValueTextBlock"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Text="0"/>
                        <TextBlock Text="Doctor approvals pending"
                                   FontSize="14"
                                   Foreground="#DBEAFE"
                                   Margin="0,8,0,0"/>
                        <TextBlock x:Name="PendingDoctorsSubtitleTextBlock"
                                   FontSize="12"
                                   Foreground="#BFDBFE"
                                   Text=""/>
                    </StackPanel>
                </Border>

                <Border Background="#047857"
                        Margin="10,0,0,10"
                        Padding="24"
                        CornerRadius="6">
                    <StackPanel>
                        <TextBlock x:Name="TotalPatientsValueTextBlock"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Text="0"/>
                        <TextBlock Text="Total patients"
                                   FontSize="14"
                                   Foreground="#D1FAE5"
                                   Margin="0,8,0,0"/>
                        <TextBlock x:Name="PendingPatientsSubtitleTextBlock"
                                   FontSize="12"
                                   Foreground="#A7F3D0"
                                   Text=""/>
                    </StackPanel>
                </Border>

                <Border Background="#7C3AED"
                        Margin="0,10,10,0"
                        Padding="24"
                        CornerRadius="6">
                    <StackPanel>
                        <TextBlock x:Name="TotalAppointmentsValueTextBlock"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Text="0"/>
                        <TextBlock Text="Total appointments"
                                   FontSize="14"
                                   Foreground="#EDE9FE"
                                   Margin="0,8,0,0"/>
                        <TextBlock x:Name="PendingAppointmentsSubtitleTextBlock"
                                   FontSize="12"
                                   Foreground="#DDD6FE"
                                   Text=""/>
                    </StackPanel>
                </Border>

                <Border Background="#DC2626"
                        Margin="5,10,5,0"
                        Padding="24"
                        CornerRadius="6">
                    <StackPanel>
                        <TextBlock x:Name="OutstandingInvoicesValueTextBlock"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Text="0"/>
                        <TextBlock Text="Outstanding invoices"
                                   FontSize="14"
                                   Foreground="#FEE2E2"
                                   Margin="0,8,0,0"/>
                        <TextBlock x:Name="OutstandingInvoicesSubtitleTextBlock"
                                   FontSize="12"
                                   Foreground="#FECACA"
                                   Text=""/>
                    </StackPanel>
                </Border>

                <Border Background="#F59E0B"
                        Margin="10,10,0,0"
                        Padding="24"
                        CornerRadius="6">
                    <StackPanel>
                        <TextBlock x:Name="TodayAdmissionsValueTextBlock"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Text="0"/>
                        <TextBlock Text="Admissions today"
                                   FontSize="14"
                                   Foreground="#FEF3C7"
                                   Margin="0,8,0,0"/>
                        <TextBlock x:Name="CurrentAdmissionsSubtitleTextBlock"
                                   FontSize="12"
                                   Foreground="#FDE68A"
                                   Text=""/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <StackPanel Margin="0,20,0,0">
                <Border Background="#0D6EFD"
                        Padding="16"
                        CornerRadius="6,6,0,0">
                    <TextBlock Text="Active doctors"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"/>
                </Border>

                <Border BorderBrush="#E2E8F0"
                        BorderThickness="1"
                        CornerRadius="0,0,6,6"
                        Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="ActiveDoctorsEmptyTextBlock"
                                   Grid.Row="0"
                                   Text="No doctors are currently available."
                                   FontSize="14"
                                   Foreground="#4B5563"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,20"
                                   Visibility="Collapsed"/>

                        <DataGrid x:Name="ActiveDoctorsDataGrid"
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  AlternatingRowBackground="#F8FAFC"
                                  RowHeight="40">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name"
                                                    Width="2*"
                                                    Binding="{Binding Name}"/>
                                <DataGridTextColumn Header="Department"
                                                    Width="2*"
                                                    Binding="{Binding Department}"/>
                                <DataGridTextColumn Header="Contact"
                                                    Width="*"
                                                    Binding="{Binding Contact}"/>
                                <DataGridTextColumn Header="Status"
                                                    Width="*"
                                                    Binding="{Binding Status}"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <TextBlock x:Name="ActiveDoctorsSummaryTextBlock"
                                   Grid.Row="2"
                                   FontSize="12"
                                   Foreground="#6B7280"
                                   Margin="0,10,0,0"
                                   Text=""/>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
