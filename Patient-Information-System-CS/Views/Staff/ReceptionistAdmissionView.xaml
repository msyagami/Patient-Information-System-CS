<UserControl x:Class="Patient_Information_System_CS.Views.Staff.ReceptionistAdmissionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="White">
    <Grid Margin="20">
        <TabControl FontSize="14">
            
            <!-- New Admission Tab -->
            <TabItem Header="New Admission" Padding="15,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border MaxWidth="700" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Patient Admission Form" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,30"
                                       Foreground="#2C3E50"
                                       HorizontalAlignment="Center"/>

                            <!-- Patient Name -->
                            <TextBlock Text="Patient Name:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <TextBox Height="35"
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,0,15"/>

                            <!-- Date of Birth -->
                            <TextBlock Text="Date of Birth:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <DatePicker Height="35"
                                        Padding="10"
                                        FontSize="14"
                                        Margin="0,0,0,15"/>

                            <!-- Contact Number -->
                            <TextBlock Text="Contact Number:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <TextBox Height="35"
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,0,15"/>

                            <!-- Address -->
                            <TextBlock Text="Address:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <TextBox Height="80"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,0,15"/>

                            <!-- Emergency Contact -->
                            <TextBlock Text="Emergency Contact:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <TextBox Height="35"
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,0,15"/>

                            <!-- Emergency Contact Relationship -->
                            <TextBlock Text="Relationship:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <TextBox Height="35"
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,0,15"/>

                            <!-- Admission Date -->
                            <TextBlock Text="Admission Date:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <DatePicker Height="35"
                                        Padding="10"
                                        FontSize="14"
                                        Margin="0,0,0,15"/>

                            <!-- Room/Ward Number -->
                            <TextBlock Text="Room/Ward Number:" 
                                       FontWeight="SemiBold"
                                       Margin="0,10,0,5"/>
                            <ComboBox Height="35"
                                      Padding="10"
                                      FontSize="14"
                                      Margin="0,0,0,20">
                                <ComboBoxItem Content="Room 101 - General Ward"/>
                                <ComboBoxItem Content="Room 102 - General Ward"/>
                                <ComboBoxItem Content="Room 201 - ICU"/>
                                <ComboBoxItem Content="Room 301 - Private"/>
                            </ComboBox>

                            <!-- Admit Button -->
                            <Button Content="Admit Patient" 
                                    Background="#28A745"
                                    Foreground="White"
                                    Padding="30,15"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    HorizontalAlignment="Center"
                                    Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
            </TabItem>

            <!-- Active/Discharged Patients Tab -->
            <TabItem Header="Active/Discharged Patients" Padding="15,10">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Control Bar -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="Show " VerticalAlignment="Center"/>
                            <ComboBox Width="70" SelectedIndex="0" Margin="5,0">
                                <ComboBoxItem Content="10"/>
                                <ComboBoxItem Content="25"/>
                                <ComboBoxItem Content="50"/>
                            </ComboBox>
                            <TextBlock Text=" entries" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <TextBlock Text="Search: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Width="250" Padding="5"/>
                        </StackPanel>
                    </Grid>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1" 
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F8F9FA"
                              RowHeight="40">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" 
                                                Width="*"
                                                Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Admit Date" 
                                                Width="*"
                                                Binding="{Binding AdmitDate}"/>
                            <DataGridTextColumn Header="Status" 
                                                Width="*"
                                                Binding="{Binding Status}"/>
                            <DataGridTemplateColumn Header="Action" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Discharge Patient" 
                                                Background="#DC3545"
                                                Foreground="White"
                                                Padding="15,8"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Margin="5,0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Pagination Bar -->
                    <Grid Grid.Row="2" Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="Showing 1 to 10 of 11 entries" 
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Previous" 
                                    Padding="10,5" 
                                    Margin="0,0,5,0"/>
                            <Button Content="1" 
                                    Padding="10,5" 
                                    Background="#0D6EFD"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Margin="0,0,5,0"/>
                            <Button Content="2" 
                                    Padding="10,5" 
                                    Margin="0,0,5,0"/>
                            <Button Content="Next" 
                                    Padding="10,5"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            
        </TabControl>
    </Grid>
</UserControl>
