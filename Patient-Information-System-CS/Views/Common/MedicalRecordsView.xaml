<UserControl x:Class="Patient_Information_System_CS.Views.Common.MedicalRecordsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="720"
             d:DesignWidth="1280"
             Background="White">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*"/>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock x:Name="TitleTextBlock"
                       Text="Medical Records"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,8"/>
            <TextBlock x:Name="SubtitleTextBlock"
                       Text="Review the clinical history and supporting details for each patient"
                       Foreground="#607D8B"
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,16"
                        VerticalAlignment="Center">
                <StackPanel x:Name="PatientFilterContainer" Visibility="Collapsed" Width="220" Margin="0,0,12,0">
                    <TextBlock Text="Patient"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#546E7A"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="PatientFilterComboBox"
                              DisplayMemberPath="DisplayName"
                              SelectedValuePath="Key"
                              SelectionChanged="PatientFilterComboBox_SelectionChanged"/>
                </StackPanel>

                <StackPanel x:Name="DoctorFilterContainer" Visibility="Collapsed" Width="220" Margin="0,0,12,0">
                    <TextBlock Text="Doctor"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#546E7A"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="DoctorFilterComboBox"
                              DisplayMemberPath="DisplayName"
                              SelectedValuePath="Key"
                              SelectionChanged="DoctorFilterComboBox_SelectionChanged"/>
                </StackPanel>

                <Button x:Name="AddRecordButton"
                        Content="New Record"
                        Background="#4A90E2"
                        Foreground="White"
                        Padding="18,8"
                        BorderThickness="0"
                        Cursor="Hand"
                        Visibility="Collapsed"
                        Click="AddRecordButton_Click"/>
            </StackPanel>

            <Border BorderBrush="#E0E6ED"
                    BorderThickness="1"
                    CornerRadius="6">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="RecordsListBox"
                             Background="White"
                             BorderThickness="0"
                             SelectionChanged="RecordsListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#F1F3F5"
                                        BorderThickness="0,0,0,1"
                                        Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="{Binding RecordedOnDisplay}"
                                                   FontWeight="SemiBold"
                                                   Foreground="#2C3E50"/>
                                        <TextBlock Text="{Binding PatientName}"
                                                   Foreground="#37474F"
                                                   Margin="0,4,0,0"/>
                                        <TextBlock Text="{Binding DiagnosisSummary}"
                                                   Foreground="#607D8B"
                                                   TextWrapping="Wrap"
                                                   Margin="0,6,0,0"/>
                                        <TextBlock Text="{Binding DoctorName, StringFormat=Doctor: {0}}"
                                                   Foreground="#90A4AE"
                                                   FontSize="12"
                                                   Margin="0,6,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>
        </StackPanel>

        <Border Grid.Column="2"
                BorderBrush="#DEE2E6"
                BorderThickness="1"
                CornerRadius="6"
                Padding="22">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock x:Name="RecordTitleTextBlock"
                               Text="Select a record"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,12"/>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Recorded"
                                   FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="2"
                                   x:Name="RecordedOnTextBlock"
                                   Text="-"/>

                        <TextBlock Grid.Row="1" Text="Patient" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Grid.Column="2"
                                   x:Name="PatientTextBlock"
                                   Text="-"/>

                        <TextBlock Grid.Row="2" Text="Doctor" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="2" Grid.Column="2"
                                   x:Name="DoctorTextBlock"
                                   Text="-"/>
                    </Grid>

                    <TextBlock Text="Diagnosis"
                               FontWeight="Bold"
                               Margin="0,0,0,6"/>
                    <TextBlock x:Name="DiagnosisTextBlock"
                               Text="-"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"/>

                    <TextBlock Text="Treatment"
                               FontWeight="Bold"
                               Margin="0,0,0,6"/>
                    <TextBlock x:Name="TreatmentTextBlock"
                               Text="-"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"/>

                    <TextBlock Text="Prescriptions"
                               FontWeight="Bold"
                               Margin="0,0,0,6"/>
                    <TextBlock x:Name="PrescriptionsTextBlock"
                               Text="-"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"/>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left">
                        <Button x:Name="RefreshButton"
                                Content="Refresh"
                                Padding="18,8"
                                BorderBrush="#CFD8DC"
                                BorderThickness="1"
                                Background="White"
                                Foreground="#37474F"
                                Cursor="Hand"
                                    Margin="0,0,12,0"
                                    Click="RefreshButton_Click"/>
                            <Button x:Name="ExportRecordButton"
                                    Content="Export PDF"
                                    Padding="18,8"
                                    BorderBrush="#1976D2"
                                    BorderThickness="1"
                                    Background="White"
                                    Foreground="#1976D2"
                                    Cursor="Hand"
                                    Visibility="Collapsed"
                                    Click="ExportRecordButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
