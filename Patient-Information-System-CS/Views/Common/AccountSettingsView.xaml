<UserControl x:Class="Patient_Information_System_CS.Views.Common.AccountSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600">
    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="30,30,30,10">
            <TextBlock Text="Account Settings"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#2C3E50"/>
            <TextBlock Text="Update your profile details or change your password."
                       FontSize="14"
                       Margin="0,8,0,0"
                       Foreground="#5D6D7E"/>
            <Border Margin="0,16,0,0"
                    Background="#FFFFFF"
                    CornerRadius="6"
                    Padding="12">
                <TextBlock x:Name="StatusTextBlock"
                           Text=""
                           Foreground="#2C3E50"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"/>
            </Border>
        </StackPanel>

        <Border Grid.Row="1"
                Background="#FFFFFF"
                Margin="30,0,30,20"
                CornerRadius="10"
                Padding="30"
                BorderBrush="#D6DBE0"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                    <TextBlock Text="Personal Information"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0"
                                                                     Grid.Column="0"
                                                                     Text="Username"
                                                                     VerticalAlignment="Center"
                                                                     Margin="0,0,12,12"/>
                                                <TextBox x:Name="UsernameTextBox"
                                                                 Grid.Row="0"
                                                                 Grid.Column="1"
                                                                 Margin="0,0,0,12"
                                                                 Height="30"/>

                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   Text="First Name"
                                                                     VerticalAlignment="Center"
                                                                     Margin="0,0,12,12"/>
                        <TextBox x:Name="GivenNameTextBox"
                                                                 Grid.Row="1"
                                 Grid.Column="1"
                                 Margin="0,0,0,12"
                                 Height="30"/>

                                                <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   Text="Middle Name"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,12"/>
                        <TextBox x:Name="MiddleNameTextBox"
                                                                 Grid.Row="2"
                                 Grid.Column="1"
                                 Margin="0,0,0,12"
                                 Height="30"/>

                                                <TextBlock Grid.Row="3"
                                   Grid.Column="0"
                                   Text="Last Name"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,12"/>
                        <TextBox x:Name="LastNameTextBox"
                                                                 Grid.Row="3"
                                 Grid.Column="1"
                                 Margin="0,0,0,12"
                                 Height="30"/>

                                                <TextBlock Grid.Row="4"
                                   Grid.Column="0"
                                   Text="Suffix"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        <TextBox x:Name="SuffixTextBox"
                                                                 Grid.Row="4"
                                 Grid.Column="1"
                                 Height="30"/>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="15,0,0,0">
                    <TextBlock Text="Password"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Text="New Password"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,12"/>
                        <PasswordBox x:Name="NewPasswordBox"
                                     Grid.Row="0"
                                     Grid.Column="1"
                                     Margin="0,0,0,12"
                                     Height="30"/>

                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   Text="Confirm Password"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                     Grid.Row="1"
                                     Grid.Column="1"
                                     Height="30"/>
                    </Grid>

                    <Border Background="#F9FBFF"
                            CornerRadius="6"
                            Margin="0,20,0,0"
                            Padding="12">
                        <TextBlock Text="Leave the password fields blank if you do not want to change it."
                                   TextWrapping="Wrap"
                                   Foreground="#5D6D7E"
                                   FontSize="12"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                Margin="30,0,30,30">
            <Button Content="Reset"
                    Padding="18,8"
                    Width="120"
                Margin="0,0,12,0"
                    Click="ResetButton_Click"/>
            <Button Content="Save Changes"
                    Padding="18,8"
                    Width="150"
                    Background="#2ECC71"
                    Foreground="White"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
