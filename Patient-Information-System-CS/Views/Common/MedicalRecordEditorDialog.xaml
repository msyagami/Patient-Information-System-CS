<Window x:Class="Patient_Information_System_CS.Views.Common.MedicalRecordEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Add Medical Record"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Width="640"
        Background="White">
    <Border Padding="24" Background="White" BorderBrush="#E0E6ED" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Create Medical Record"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Fill in the patient, doctor, and treatment details below"
                       Foreground="#607D8B"
                       Margin="0,0,0,16"/>

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Patient"
                           Grid.Row="0"
                           FontWeight="SemiBold"
                           Foreground="#546E7A"/>
                <ComboBox x:Name="PatientComboBox"
                          Grid.Row="0"
                          Grid.Column="0"
                          Margin="0,24,0,0"
                          DisplayMemberPath="DisplayName"
                          SelectedValuePath="Key"
                          SelectionChanged="OnFieldChanged"/>

                <TextBlock Text="Doctor"
                           Grid.Row="0"
                           Grid.Column="2"
                           FontWeight="SemiBold"
                           Foreground="#546E7A"/>
                <ComboBox x:Name="DoctorComboBox"
                          Grid.Row="0"
                          Grid.Column="2"
                          Margin="0,24,0,0"
                          DisplayMemberPath="DisplayName"
                          SelectedValuePath="Key"
                          SelectionChanged="OnFieldChanged"/>

                <TextBlock Text="Date"
                           Grid.Row="1"
                           FontWeight="SemiBold"
                           Foreground="#546E7A"
                           Margin="0,24,0,0"/>
                <DatePicker x:Name="RecordDatePicker"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,48,0,0"
                            SelectedDateChanged="OnFieldChanged"/>
            </Grid>

            <TextBlock Text="Diagnosis"
                       FontWeight="SemiBold"
                       Foreground="#546E7A"/>
            <TextBox x:Name="DiagnosisTextBox"
                     Margin="0,6,0,16"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="100"
                     TextChanged="OnFieldChanged"/>

            <TextBlock Text="Treatment"
                       FontWeight="SemiBold"
                       Foreground="#546E7A"/>
            <TextBox x:Name="TreatmentTextBox"
                     Margin="0,6,0,16"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="100"
                     TextChanged="OnFieldChanged"/>

            <TextBlock Text="Prescriptions"
                       FontWeight="SemiBold"
                       Foreground="#546E7A"/>
            <TextBox x:Name="PrescriptionsTextBox"
                     Margin="0,6,0,20"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="80"
                     TextChanged="OnFieldChanged"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Width="110"
                        Padding="12,6"
                        BorderBrush="#B0BEC5"
                        BorderThickness="1"
                        Background="White"
                    Foreground="#455A64"
                    Margin="0,0,12,0"
                        Click="CancelButton_Click"/>
                <Button x:Name="SaveButton"
                        Content="Save Record"
                        Width="140"
                        Padding="12,6"
                        BorderBrush="#1976D2"
                        BorderThickness="0"
                        Background="#1976D2"
                        Foreground="White"
                        IsDefault="True"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
