<Window x:Class="Patient_Information_System_CS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Patient Information System - Login"
        Height="640"
        Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Window.Resources>
        <Style x:Key="PortalRadioStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#455A64"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Root"
                                Padding="12,6"
                                CornerRadius="16"
                                Background="#ECEFF1"
                                Cursor="Hand">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#0D6EFD"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#0D6EFD"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#D6E4FF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Background" Value="#CFD8DC"/>
                                <Setter Property="Foreground" Value="#90A4AE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="0,10,0,25"
                    HorizontalAlignment="Center">
            <TextBlock Text="Patient Information System"
                       HorizontalAlignment="Center"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="#2C3E50"/>
            <TextBlock Text="Sign in using your assigned portal"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"
                       Foreground="#607D8B"/>
        </StackPanel>

        <Border Grid.Row="1"
                MaxWidth="380"
                Background="White"
                BorderBrush="#D9E2EC"
                BorderThickness="1"
                CornerRadius="8"
                Padding="32"
                VerticalAlignment="Top">
            <Border.Effect>
                <DropShadowEffect BlurRadius="14" ShadowDepth="2" Opacity="0.25"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Select Portal"
                           FontWeight="Bold"
                           Foreground="#2C3E50"/>
                <StackPanel Orientation="Horizontal"
                        Margin="0,12,0,24"
                        HorizontalAlignment="Center">
                    <RadioButton Content="Admin"
                                 GroupName="Portal"
                                 Style="{StaticResource PortalRadioStyle}"
                                 Tag="Admin"
                         IsChecked="True"
                         Margin="0,0,10,0"
                                 Checked="RoleRadioButton_Checked"/>
                    <RadioButton Content="Doctor"
                                 GroupName="Portal"
                                 Style="{StaticResource PortalRadioStyle}"
                                 Tag="Doctor"
                         Margin="0,0,10,0"
                                 Checked="RoleRadioButton_Checked"/>
                    <RadioButton Content="Patient"
                                 GroupName="Portal"
                                 Style="{StaticResource PortalRadioStyle}"
                                 Tag="Patient"
                         Margin="0,0,10,0"
                                 Checked="RoleRadioButton_Checked"/>
                    <RadioButton Content="Staff"
                                 GroupName="Portal"
                                 Style="{StaticResource PortalRadioStyle}"
                                 Tag="Staff"
                                 Checked="RoleRadioButton_Checked"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Username"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="UsernameTextBox"
                             Margin="0,0,0,16"
                             Padding="10"
                             FontSize="14"
                             KeyDown="Credential_KeyDown"/>

                    <TextBlock Text="Password"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Margin="0,0,0,16"
                                 Padding="10"
                                 FontSize="14"
                                 KeyDown="Credential_KeyDown"/>

                    <TextBlock x:Name="FeedbackTextBlock"
                               TextWrapping="Wrap"
                               Foreground="#C62828"
                               Visibility="Collapsed"
                               Margin="0,0,0,16"/>

                    <Button x:Name="LoginButton"
                            Content="Log In"
                            Background="#0D6EFD"
                            Foreground="White"
                            Padding="0,12"
                            FontSize="16"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="LoginButton_Click"/>

                    <Border Background="#E3F2FD"
                            BorderBrush="#90CAF9"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="Demo Credentials"
                                       FontWeight="Bold"
                                       Foreground="#0D47A1"/>
                            <TextBlock Text="Admin: admin1 / adminpass"
                                       Margin="0,6,0,0"/>
                            <TextBlock Text="Doctor: doc1 / doctorpass"/>
                            <TextBlock Text="Patient: patient1 / patientpass"/>
                            <TextBlock Text="Staff: staff1 / staffpass"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
